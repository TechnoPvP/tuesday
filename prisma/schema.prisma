generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: Implement board status
enum BoardStatus {
  PRIVATE
  SHARED
}

enum BoardType {
  DOCUMENT
  ITEM_BOARD
}

model Board {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  is_favorite Boolean?
  status      BoardStatus @default(SHARED)
  type        BoardType   @default(ITEM_BOARD)
  items       Item[]
  columns     Column[]
  created_at  DateTime    @default(now())
  folder      Folder?     @relation(fields: [folder_id], references: [id])
  folder_id    Int?
}

model Item {
  id            Int      @id @default(autoincrement())
  name          String
  column_values Json
  board         Board?   @relation(fields: [board_id], references: [id])
  board_id      Int?
  created_at    DateTime @default(now())
}

model Folder {
  id     Int     @id @default(autoincrement())
  name   String
  boards Board[]
}

enum ColumnType {
  AUTO_NUMBER
  CHECKBOX
  LONG_TEXT
  TEXT
  STATUS
}

model Column {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  type        ColumnType
  created_at  DateTime   @default(now())
  board       Board      @relation(fields: [board_id], references: [id])
  board_id    Int
}

model Group {
  id   Int    @id @default(autoincrement())
  name String
}

// UNIMPLEMENTED
model View {
  id Int @id
}
